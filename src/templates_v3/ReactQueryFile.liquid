function addMetaToOptions<TResultType, TError, TSelectData>(options: UseQueryOptions<TResultType, TError, TSelectData> | undefined, metaContext: QueryMetaContextValue) {
  if (metaContext.metaFn) {
    options = options ?? { };
    options.meta = {
      ...metaContext.metaFn(),
      ...options.meta,
    };
  }
  return options;
}
